import turtle as trtl
import random as rand

p = trtl.Turtle()

'''
pumpkin_color = "orange"
pumpkin_shape = "circle"
pumpkin_size = 2
score = 0

p.fillcolor(pumpkin_color)
p.shape(pumpkin_shape)
p.shapesize(pumpkin_size)
p.color("orange")
'''

def pumpkin_clicked(x,y):
  pumpkin_change_position()

def pumpkin_change_position():
  x_value = rand.randint(-100,100)
  y_value = rand.randint(-100,100)
  p.penup()
  p.hideturtle()
  p.goto(x_value,y_value)
  p.showturtle()

wn = trtl.Screen()

wn.addshape('pumpkin.gif')
p.shape('pumpkin.gif')

p.onclick(pumpkin_clicked)


g = trtl.Turtle()

def ghost_clicked(x,y):
  ghost_change_position(x,y)

def ghost_change_position(x_value,y_value):
  g.penup()
  g.goto(x_value,y_value)


wn = trtl.Screen()

wn.addshape('ghost_1.gif')
g.shape('ghost_1.gif')
wn.onclick(ghost_clicked)



wn.mainloop()
